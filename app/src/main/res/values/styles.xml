<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/background</item>
        <item name="colorPrimaryDark">@color/background</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/gnt_white</item>
    </style>

    <style name="listitem" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/gnt_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="roundCorner" parent="">
        <item name="color">@color/gnt_white</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
        <item name="elevation">4dp</item>

    </style>
    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>